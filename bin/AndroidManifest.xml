<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lynchsoftwareengineering.drivespectrum"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="6"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/log_try"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name=".GPSIntentService" />    
        <service android:name=".BuildPathAndAVGTableIntentService"/> 
        <service android:name=".NetworkingIntentService"/>       
        <activity
            android:name="com.lynchsoftwareengineering.drivespectrum.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lynchsoftwareengineering.drivespectrum.SpectrumActivity"
            android:label="@string/title_activity_spectrum_view" 
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
